@model IEnumerable<RSSReader2.Models.RSSFeed>

@{
    ViewData["Title"] = "RSS feedy";
}

<h1>RSS feedy</h1>

<p>
    <a asp-action="Create">Přidat nový</a>
</p>

<form asp-controller="RSSFeeds" asp-action="Index" method="get">
    <p>
        Název: <input type="text" name="searchString" />
        <input type="submit" value="Filtrovat" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Articles" asp-route-id="@item.Id">Články</a> 
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
