@model IEnumerable<RSSReader2.Models.RSSFeed>

@{
    ViewData["Title"] = "RSS feedy";
}



<h1>RSS feedy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-file-plus"></i> &nbsp; Přidat nový <!--non-braking space - nedělitelná mezera (nerozdělí se na 2 řádky)-->
    </a>
</p>

<form asp-controller="RSSFeeds" asp-action="Index" method="get">
    <p>
        Název: <input type="text" name="searchString" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-filter"></i> &nbsp; Filtrovat
        </button>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Articles" asp-route-id="@item.Id">
                        <i class="bi bi-list-columns-reverse"></i> &nbsp; Články
                    </a>
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square"></i> &nbsp; Upravit
                </a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-info-square"></i> &nbsp; Detaily
                </a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-file-x"></i> &nbsp; Smazat
                </a> 

            </td>
        </tr>
}
    </tbody>
</table>
