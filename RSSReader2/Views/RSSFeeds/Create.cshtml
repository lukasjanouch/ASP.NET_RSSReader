@model RSSReader2.Models.RSSFeed

@{
    ViewData["Title"] = "Vytvořit";
}

<h1>Vytvořit</h1>

<h4>RSS feed</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="margin-top: 5px">
                    <i class="bi bi-file-plus"></i> &nbsp; Vytvořit
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index" style="margin-top: 5px">
        <i class="bi bi-back"></i> &nbsp; Zpět na seznam feedů
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
